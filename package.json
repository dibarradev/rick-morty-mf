{
  "name": "rick-morty-mf",
  "version": "1.0.0",
  "description": "Rick and Morty Microfrontends Project",
  "private": true,
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:shell": "cd shell && npm run format",
    "format:characters": "cd characters && npm run format",
    "format:character-detail": "cd character-detail && npm run format",
    "format:all": "npm run format && npm run format:shell && npm run format:characters && npm run format:character-detail"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
